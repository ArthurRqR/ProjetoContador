<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/contador_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contador"
        app:layout_constraintTop_toBottomOf="@id/mais_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menos_button"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/mais_button"
        app:layout_constraintBottom_toTopOf="@id/contador_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mais_button"
            :layout_constraintStart_toStartOf="parent"
        android:layout_width="119dp"
        android:layout_height="62dp"
        android:text="Mais"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="169dp" />

    <Button
        android:id="@+id/menos_button"
        app:layout_constraintTop_toBottomOf="@id/contador_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="119dp"
        android:layout_height="62dp"
        android:text="Menos"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="488dp" />

</androidx.constraintlayout.widget.ConstraintLayout>